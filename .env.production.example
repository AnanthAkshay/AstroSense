# Production Environment Variables for AstroSense
# Copy this file to .env.production and fill in the values

# Database Configuration
POSTGRES_USER=astrosense_prod
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_DB=astrosense_prod
DATABASE_URL=postgresql://astrosense_prod:your_secure_database_password_here@postgres:5432/astrosense_prod

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# API Keys
NASA_DONKI_API_KEY=your_nasa_api_key_here
NEXT_PUBLIC_CESIUM_ION_TOKEN=your_cesium_ion_token_here

# Security
SECRET_KEY=your_very_secure_secret_key_here_minimum_32_characters
GRAFANA_PASSWORD=your_secure_grafana_password_here

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend URLs (update with your actual domain)
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
NEXT_PUBLIC_WS_URL=wss://yourdomain.com/api/stream

# SSL Configuration (if using HTTPS)
NEXT_PUBLIC_CSP_NONCE=your_csp_nonce_here

# Monitoring (optional)
ENABLE_MONITORING=true
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true