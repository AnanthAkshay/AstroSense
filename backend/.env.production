# Production Environment Configuration for AstroSense Backend

# NASA DONKI API Configuration
NASA_DONKI_API_KEY=ATOOD7MgZPxGcaTmPZckylMkHC0SWfZK3HUgyK05
NASA_DONKI_BASE_URL=https://api.nasa.gov/DONKI

# NOAA SWPC Configuration
NOAA_SWPC_BASE_URL=https://services.swpc.noaa.gov/json

# Database Configuration with Connection Pooling
DATABASE_URL=${DATABASE_URL}
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RATE_LIMIT=1000
API_WORKERS=4

# CORS Configuration for Production Domain
CORS_ORIGINS=${CORS_ORIGINS}
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Cache Configuration
CACHE_TTL_SECONDS=60
REDIS_URL=${REDIS_URL}

# Model Configuration
MODEL_PATH=./ml_models/random_forest_v1.pkl
MODEL_VERSION=1.0.0

# Logging and Monitoring
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/astrosense.log
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
SECRET_KEY=${SECRET_KEY}
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Performance
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30

# Environment
ENVIRONMENT=production
DEBUG=false